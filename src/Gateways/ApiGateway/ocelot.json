{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{version}/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "127.0.0.1",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/gateway/identity-service/{version}/{everything}",
      "UpstreamHttpMethod": ["GET","POST"]
    },
    {
      "DownstreamPathTemplate": "/api/{version}/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "127.0.0.1",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/gateway/orchestration-service/{version}/{everything}",
      "UpstreamHttpMethod": ["GET","POST"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "AddHeadersToRequest": {
        "X-User-Id": "{claims[sub]}",
        "X-User-Email":  "{claims[email]}",ARKAD
        "X-Jti": "{claims[jti]}",
        "X-Permissions": "{claims[permissions], \", \"}"
      },
      "UpstreamHeaderTransform": {
        "Authorization": ""
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://127.0.0.1:5000"
  }
}